{
  "extends": ["@soonlist/tsconfig/base.json"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "jsx": "react-native",
    "types": ["nativewind/types"],
    "checkJs": false
  },
  "include": [
    "src",
    "*.ts",
    "*.js",
    "eslint.config.mjs",
    "src/app",
    "src/components",
    "src/hooks",
    "plugins"
  ],
  "exclude": ["node_modules"]
}
